<h2>User info</h2>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->

<div class="field">
	<label for="user_name">Name</label>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<label for="user_image">Image</label>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg' %>
	<%= f.attachment_field :profile_image, class: "user_image" %>
</div>

<div class="field">
	<label for="user_introduction">Introduction</label>
	<%= f.text_area :introduction, class: "introduction" %>
</div>

<div class="actions">
	<%= f.submit "Update User", class:"update" %>
</div>

<% end %>