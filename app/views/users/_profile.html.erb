
		<%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "attachment user profile_image", fallback: "no_image.jpg" %>
<table class="table">
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
</table>

<div class="row">
<% if user == current_user %>
	<%= link_to "",edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
<% else %>
  <p><%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
<% end %>
</div>